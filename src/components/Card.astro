---
interface Props {
  data: any;
}

const { data } = Astro.props;
---

<div
  class="flex flex-col rounded-lg bg-white/50 backdrop-blur-xl text-white w-[95%]"
>
  <a href="#">
    <div class="overflow-hidden">
      <img
        src={data.images[0]}
        class="object-cover opacity-80 w-full h-56 xl:h-[300px] rounded-t-lg hover:scale-105 transition duration-300"
      />
    </div>
  </a>
  <div
    class="px-3 backdrop-blur-md bg-white/20 rounded-br-[2.3rem] rounded-t-sm overflow-hidden"
  >
    <p class="line-clamp-1 pr-5 py-1">{data.category}</p>
  </div>
  <div class="p-2">
    <a href="#">
      <p class="line-clamp-1 hover:text-blue-400 transition duration-300">
        {data.title}
      </p>
    </a>
    <h1 class="font-bold text-lg">
      $ {
        parseFloat(
          (data.price - (data.price * data.discountPercentage) / 100).toFixed(1)
        )
      }
    </h1>
    <p class="text-sm text-[#ff0000]">
      <span class="line-through text-white/60">$ {data.price}</span>
      {parseFloat(data.discountPercentage.toFixed(1))}%
    </p>
    <div class="flex items-center gap-1">
      <svg viewBox="0 0 1024 1024" fill="gold" height="1em" width="1em">
        <path
          d="M908.1 353.1l-253.9-36.9L540.7 86.1c-3.1-6.3-8.2-11.4-14.5-14.5-15.8-7.8-35-1.3-42.9 14.5L369.8 316.2l-253.9 36.9c-7 1-13.4 4.3-18.3 9.3a32.05 32.05 0 00.6 45.3l183.7 179.1-43.4 252.9a31.95 31.95 0 0046.4 33.7L512 754l227.1 119.4c6.2 3.3 13.4 4.4 20.3 3.2 17.4-3 29.1-19.5 26.1-36.9l-43.4-252.9 183.7-179.1c5-4.9 8.3-11.3 9.3-18.3 2.7-17.5-9.5-33.7-27-36.3z"
        ></path>
      </svg>
      <p class="text-sm py-1">
        {data.rating}
      </p>
    </div>
  </div>
</div>
